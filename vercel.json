{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_USE_MOCK_DATA": {
      "description": "Set to 'true' to use mock data (no database needed), or 'false' for production with Supabase",
      "value": "true"
    },
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "Your Supabase project URL (e.g., https://xxxxx.supabase.co)",
      "value": "https://placeholder.supabase.co"
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Your Supabase anon/public key",
      "value": "placeholder-key"
    }
  }
}
